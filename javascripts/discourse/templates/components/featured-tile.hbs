{{#if topic.thumbnails}}
<a href={{url}}>
    <img
      src={{fallbackSrc}}
      srcset={{srcset}}
      width={{width}}
      height={{height}}
      loading="lazy"
      class="topic-tile-thumbnail"
    />

  <div class="topic-info">
    <span class="topic-title">{{topic.title}}</span>
    <span class="author">
      {{#user-link user=topic.creator}}
        {{avatar topic.creator imageSize="large"}}
      {{/user-link}}
    </span>
  </div>
</a>
{{else}}
<a href={{url}}>

  <div class="topic-info none-image">
    <span class="topic-title">{{topic.title}}</span>
    <span class="author">
      {{#user-link user=topic.creator}}
        {{avatar topic.creator imageSize="large"}}
      {{/user-link}}
    </span>
  </div>
</a>
  {{/if}}